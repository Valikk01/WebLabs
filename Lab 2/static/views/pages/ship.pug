extends ../layout.pug

block prepend styles
  link(rel='stylesheet' href='//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css')

block content
  div(class='breadcrumb')
    li Додавання нового корабля в колекцію
  form(id='shop-add-form' name='shop-add-form' class='form-inline' action='/addShip' method='POST')
    div(class='form-group')
      div(class='col-md-3')
        label(for='name') Name
      div(class='col-md-9')
        input(id='name' name='name' value='' class='form-control')

    div(class='form-group')
      div(class='col-md-3')
        label(for='name') Number
      div(class='col-md-9')
        input(id='number' name='number' value='' class='form-control')

    div(class='form-group')
      div(class='col-md-3')
        label(for='name') Country
      div(class='col-md-9')
        input(id='country' name='country' value='' class='form-control')

    div(class='form-group')
      div(class='col-md-3')
        label(for='name') Weight
      div(class='col-md-9')
        input(id='weight' name='weight' value='' class='form-control')

    div(class='form-group')
      div(class='col-md-12')
        button(type='submit' class='btn btn-primary') Create
    h4= info
  br


  div(class='breadcrumb')
    li Редагування корабля в колекції
  form(id='shop-edit-form' name='shop-add-form' class='form-inline' action='/editShip' method='POST')
    div(class='')
      div(class='col-md-3')
        label(for='') Ship
      div(class='col-md-6')
        select#OurShipEdit(name = 'index')
          each val, index in ships
            option= index + '. Назва: ' + val.name + '. Адруса: ' + val.address
    div
      div(class='form-group')

        div(class='col-md-3')
          label(for='name') New Name
        div(class='col-md-9')
          input( name='name' value='' class='form-control')
      div(class='form-group')
        div(class='col-md-3')
          label(for='name') New Address
        div(class='col-md-9')
          input( name='address' value='' class='form-control')
      div(class='form-group')
        div(class='col-md-12')
          button(type='submit' class='btn btn-primary') Edit

  div(class='breadcrumb')
    li Видалення корабля з колекції
  form(id='shop-delete-form' name='shop-add-form' class='form-inline' action='/deleteShip' method='POST')
    div(class='')
      div(class='col-md-3')
        label(for='') Shop
      div(class='col-md-6')
        select(name = 'index')
          each val, index in ships
            option= index + '. Назва: ' + val.name + '. Адреса: ' + val.address
        button(type='submit' class='btn btn-primary') Delete
        p= info

  div(class='breadcrumb')
    li Пошук одного корабля в колекції
  form(id='shop-find-form' name='shop-add-form' class='form-inline' action='/findShip' method='POST')
    div(class='')
      div(class='form-group')

        div(class='col-md-3')
          label(for='name') Name
        div(class='col-md-9')
          input( name='name' value='' class='form-control')

      div(class='form-group')
        div(class='col-md-12')
          button(type='submit' class='btn btn-primary') Find
      p= find
block append scripts
  script(src='/static/js/models/shop.js')
  script(src='//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js')
  script(src='/static/js/views/shop.js')
      